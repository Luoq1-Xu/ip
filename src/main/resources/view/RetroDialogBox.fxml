<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root type="HBox" alignment="TOP_RIGHT" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/retro-dialog-box.css">
    <children>
        <Label fx:id="dialog" minHeight="-Infinity" text="Label" wrapText="true" styleClass="retro-message">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>
</fx:root>